<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#4db6ac">
    <item>
        <layer-list>
            <!-- 余白を確保するためのアイテム-->
            <item>
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <padding
                        android:top="2dp"
                        android:bottom="2dp"
                        android:left="2dp"
                        android:right="2dp" />
                </shape>
            </item>
            <!-- ボタンの描画-->
            <item>
                <shape>
                    <solid android:color="#009688" />
                    <padding
                        android:top="16dp"
                        android:bottom="16dp"
                        android:left="32dp"
                        android:right="32dp" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>