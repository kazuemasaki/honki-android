<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yokmama.learn10.chapter04.lesson17.fragment.FrameLayoutFragment">

    <!--中央/下段に配置-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/dog1"
        android:layout_gravity="center|bottom" />

    <!--上段/左に配置-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="left | top"
        android:textSize="9sp"
        android:alpha="0.9"
        android:layout_gravity="left|top" />

    <!--上段/中央に配置-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:text="center_horizontal | top"
        android:textSize="9sp"
        android:layout_gravity="center_horizontal|top" />

    <!--上段/右に配置-->
    <Button
        android:layout_width="wrap_content"
        android:alpha="0.9"
        android:layout_height="wrap_content"
        android:text="right | top"
        android:textSize="9sp"
        android:layout_gravity="right|top" />

    <!--中段/左に配置-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:text="left | center_vertical"
        android:textSize="9sp"
        android:layout_gravity="left|center_vertical" />

    <!--中段/中央に配置-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:text="center"
        android:textSize="9sp"
        android:layout_gravity="center" />

    <!--中段/右に配置-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:text="right | center_vertical"
        android:textSize="9sp"
        android:layout_gravity="right|center_vertical" />

    <!--下段/左に追加-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:text="left | bottom"
        android:textSize="9sp"
        android:layout_gravity="left|bottom" />

    <!--下段/中央に追加-->
    <Button
        android:layout_width="wrap_content"
        android:alpha="0.9"
        android:layout_height="wrap_content"
        android:text="center_horizontal | bottom"
        android:textSize="9sp"
        android:layout_gravity="center_horizontal|bottom" />

    <!--下段/右に追加-->
    <Button
        android:layout_width="wrap_content"
        android:alpha="0.9"
        android:layout_height="wrap_content"
        android:text="right | bottom"
        android:textSize="9sp"
        android:layout_gravity="right|bottom" />

</FrameLayout>
